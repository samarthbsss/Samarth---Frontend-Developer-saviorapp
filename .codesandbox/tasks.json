{
  // These tasks will run in order when initializing your CodeSandbox project.
  "setupTasks": [
    {
      "name": "Install Dependencies",
      "command": "npm install"
    },
    {
      "command": "npx create-react-app saviour-app",
      "name": "n"
    },
    {
      "command": "npm install react-icons --save",
      "name": "npm install react-icons --save"
    },
    {
      "command": "npm install -D tailwindcss",
      "name": "npm install -D tailwindcss"
    },
    {
      "command": "npx tailwindcss init",
      "name": "npx tailwindcss init"
    }
  ],

  // These tasks can be run from CodeSandbox. Running one will open a log in the app.
  "tasks": {
    "start": {
      "name": "start",
      "command": "npm run start",
      "runAtStart": true
    },
    "build": {
      "name": "build",
      "command": "npm run build",
      "runAtStart": false
    },
    "test": {
      "name": "test",
      "command": "npm run test",
      "runAtStart": false
    },
    "eject": {
      "name": "eject",
      "command": "npm run eject",
      "runAtStart": false
    }
  }
}
